<Window x:Class="HomeWork3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <ListView x:Name="uxList">
            <ListView.View>
                <GridView x:Name="uxGridView" AllowsColumnReorder="True">
                    <GridViewColumn Header="Name" x:Name="uxHeaderName" DisplayMemberBinding="{Binding Name}">
                    </GridViewColumn>
                    <GridViewColumn Header="Password" x:Name="uxHeaderPassword" DisplayMemberBinding="{Binding Password}" />
                </GridView>                
            </ListView.View>
        </ListView>
    </Grid>
</Window>
