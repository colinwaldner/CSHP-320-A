@model HomeWork6.Models.BirthdayCard

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <title>Birthday Card Generator</title>
</head>
<body>

<div class="row">
    <div class="col-10 col-sm-6 col-md-5 col-lg-4 col-xl-3 pl-4">
        <h4 class="bg-dark text-light">Birthday Card Generator</h4>

        <h2>Send a Birthday Card</h2>

        <form asp-action="Index" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="From" class="control-label col-auto">From:</label>
                <input asp-for="From" class="form-control form-control-sm col" />
            </div>
            <div class="form-group row">
                <label asp-for="To" class="control-label col-auto">To:</label>
                <input asp-for="To" class="form-control form-control-sm col" />
            </div>
            <div class="form-group row">
                <label asp-for="Message" class="control-label col-auto">Message:</label>
                <input asp-for="Message" class="form-control form-control-sm col" />
            </div>
            <div class="form-group">
                <input type="submit" value="Send Card" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
</body>
</html>
